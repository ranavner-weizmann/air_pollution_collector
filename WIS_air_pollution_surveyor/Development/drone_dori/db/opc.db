record(ai, "opc:period")
{
	field(DESC,"actual acquisition time") #description
	field(EGU, "s") #engineering units
}

record(ai, "opc:Flowrate")
{
	field(DESC,"measured flow rate") #description
	field(EGU, "ml/s") #engineering units
}

record(ai, "opc:temperature")
{
	field(DESC,"ambient temperature") #description
	field(EGU, "C") #engineering units
}

record(ai, "opc:humidity")
{
	field(DESC,"humidity") #description
	field(EGU, "%") #engineering units
}

record(ai, "opc:pm1")
{
	field(DESC,"particle conc below 1 microns") #description
	field(EGU, "ug/m^3") #engineering units
}

record(ai, "opc:pm2dot5")
{
	field(DESC,"particle conc below 2.5 microns") #description
	field(EGU, "ug/m^3") #engineering units
}

record(ai, "opc:pm10")
 {
 	field(DESC,"particle conc below 10 microns") #description
 	field(EGU, "ug/m^3") #engineering units
 }
 
record(waveform, "opc:bins")
{
	field(FTVL, "DOUBLE")
	field(DESC,"particle coutn per s per bin size") #description
	field(NELM, 24)
	field(EGU, "count/s")
}

record(ai, "opc:laser_status")
{
 	field(DESC,"laser power in arb units") #description
 	field(EGU, "None") #engineering units
}
