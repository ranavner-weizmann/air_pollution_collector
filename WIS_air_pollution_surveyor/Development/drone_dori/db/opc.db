{
 	field(DESC,"high gain status") #description
}
record(bi, "opc:auto_gain_ON")
{
 	field(DESC,"auto gain status") #description
}

record(bi, "opc:comm_ON")
{
 	field(DESC,"communication status") #description
}
record(bi, "opc:laser_ON")
{
